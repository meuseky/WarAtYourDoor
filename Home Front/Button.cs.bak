using Microsoft.Xna.Framework;
using Microsoft.Xna.Framework.Graphics;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Home_Front
{
    class Button
    {
        #region Variables
        private Texture2D m_buttonTexture;
        private Rectangle m_screenPosition;
        //0:Normal, 1:MouseOver, 2:MousePressed, 3:MouseReleased
        private int m_buttonState;
        private int cellSize;
        #endregion

        #region Methods
        public Button(Texture2D buttonTexture, Rectangle screenPosition)
        {
            m_buttonTexture = buttonTexture;
            m_screenPosition = screenPosition;
            m_buttonState = 0;
            cellSize = m_buttonTexture.Height / 4;
        }

        public void Update()
        {
            if (new Rectangle(InputHandler.newMouseState.X, InputHandler.newMouseState.Y, 1, 1).Intersects(m_screenPosition))
            {
                m_buttonState = 1;
                if (InputHandler.IsLeftButtonDown())
                {
                    m_buttonState = 2;
                }
                if (InputHandler.IsLeftButtonClicked())
                {
                    m_buttonState = 3;
                }
            }
            else
            {
                m_buttonState = 0;
            }
        }

        public void Draw(SpriteBatch spriteBatch)
        {
            spriteBatch.Draw(m_buttonTexture, m_screenPosition,
                                new Rectangle(0, cellSize * m_buttonState, m_buttonTexture.Width, cellSize), Color.White);
        }

        public bool IsClicked()
        {
            if (InputHandler.IsLeftButtonClicked()
                    && new Rectangle(InputHandler.newMouseState.X, InputHandler.newMouseState.Y, 1, 1).Intersects(m_screenPosition))
            {
                AudioHandler.PlayEffect(4);
                return true;
            }
            else
            {
                return false;
            }
        }
        #endregion
    }

    static class ButtonManager
    {
        #region Variables
        public static Button[] gameButton;
        public static Texture2D[] buttonTexture;
        #endregion

        #region Methods
        static ButtonManager()
        {
            gameButton = new Button[14];
        }

        public static void InitButtons()
        {
            //Menu Buttons
            gameButton[0] = new Button(buttonTexture[0], new Rectangle(75, 400, 300, 50));
            gameButton[1] = new Button(buttonTexture[1], new Rectangle(75, 475, 300, 50));
            gameButton[2] = new Button(buttonTexture[2], new Rectangle(75, 550, 300, 50));
            gameButton[3] = new Button(buttonTexture[3], new Rectangle(75, 625, 300, 50));
            gameButton[4] = new Button(buttonTexture[4], new Rectangle(75, 625, 300, 50));
            //InPlay Buttons
            gameButton[5] = new Button(buttonTexture[5], new Rectangle(675, 600, 300, 50));
            gameButton[6] = new Button(buttonTexture[4], new Rectangle(325, 600, 300, 50));
            //Quest PopUp Buttons
            gameButton[7] = new Button(buttonTexture[6], new Rectangle(500, 475, 300, 50));
            gameButton[8] = new Button(buttonTexture[6], new Rectangle(500, 550, 300, 50));
            gameButton[9] = new Button(buttonTexture[6], new Rectangle(500, 625, 300, 50));
            //Win/Lose
            gameButton[10] = new Button(buttonTexture[4], new Rectangle(545, 550, 300, 50));
            gameButton[11] = new Button(buttonTexture[7], new Rectangle(545, 550, 300, 50));
            //Settings
            gameButton[12] = new Button(buttonTexture[6], new Rectangle(225, 250, 300, 50));
            gameButton[13] = new Button(buttonTexture[6], new Rectangle(225, 400, 300, 50));
        }
        #endregion
    }
}
